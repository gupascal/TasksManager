{# src/TMS/UsersBundle/Resources/views/Default/index.html.twig #}
{% extends "::anonymousLayout.html.twig" %}

{% block Stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/tmsusers/css/styleIndex.css')  }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block title %}Task Manager - Home Page{% endblock %}

{% block content %}
	<div id="user">
		<p><a class="links" href="{{ path('login') }}">Already register ? Log in</a></p>
	</div>
	<div class="form">
		{% if form_submitted %}
			{% if registration_succeded %}
				<p class="notification good" >You're now register !</p>
			{% endif %}
			{% if username_or_email_already_used %}
				<p class="notification bad">Username or email already used !</p>
			{% endif %}
		{% endif %}
		{{ form_start(signup_form) }}
			{{ form_errors(signup_form) }}
			
			{{ form_row(signup_form.username, { 'label': 'Username:' }) }}
			{{ form_row(signup_form.email, { 'label': 'E-mail:' }) }}
			{{ form_row(signup_form.password, { 'label': 'Password:' }) }}
			{{ form_row(signup_form.password_, { 'label': 'Confirm Password:' }) }}
			{{ form_row(signup_form.submit, {'label': 'Sign Up'}) }}
		{{ form_end(signup_form) }}
	</div>
{% endblock %}